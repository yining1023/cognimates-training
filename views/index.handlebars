{{> header }}

<div class="container ">
	<div class="row ">
		<div class="col text-center">
		<h2 class="classifier__page-header">Cognimates Studio</h2>
		</div>
	</div>
	<div class="row">
		<div class="classifiers__card-wrapper col-12 col-md-6">
			<div class="card classifiers__card">
				<img src="/images/vision_banner.png"
					class="js-classifiers__card--image
							card-img-top
							classifiers__card-image"
					alt="Train a Text Classifier">
				<div class="card-body classifiers__card-body">
					<button class="js-classifiers__card--image 
							btn
							btn-primary 
							btn-lg
							btn-inline-block">
						Train Vision
					</button>
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item text-center">
						<a class="button--view-guide"
							href="https://docs.google.com/document/d/1q8Cj9QhwjUXM51Qqtj3V3jYMFA44SiAAIZzVck7Efdc/view#heading=h.4jovbu2htq86">
							Getting Started Guide</a>
					</li>
				</ul>
			</div>
		</div>

		<div class="classifiers__card-wrapper col-12 col-md-6">
			<div class=" card classifiers__card">
				<img src="/images/nlc_banner.png"
					class="js-classifiers__card--vision 
							card-img-top 
							classifiers__card-image"
					alt="Train a Text Classifier">

				<div class="card-body classifiers__card-body">
					<button class="js-classifiers__card--vision 
							btn 
							btn-primary 
							btn-lg 
							btn-inline-block">
						Train Text
					</button>
				</div>

				<ul class="list-group list-group-flush">
					<li class="list-group-item text-center">
						<a class="button--view-guide"
							href="https://docs.google.com/document/d/1owZxciBFD9UWaPBfDKoXK9DaBejm5aSNlP_Wl0RmMIE/view">
							Getting Started Guide
						</a>
					</li>
				</ul>
			</div>
		</div>


		<div class="classifiers__card-wrapper col-12 col-md-6">
			<div class="card classifiers__card">
				<img src="/images/doodle_banner.png"
					class="js-classifiers__card--doodle
							card-img-top
							classifiers__card-image"
					alt="Train a Doodle Classifier">

				<div class="card-body classifiers__card-body">
					<button class="js-classifiers__card--doodle
									btn
									btn-primary
									btn-lg
									btn-inline-block">
						Train Doodle
					</button>
				</div>

				<ul class="list-group list-group-flush">
					<li class="list-group-item text-center">
						<a class="button--view-guide"
							href="https://docs.google.com/document/d/1owZxciBFD9UWaPBfDKoXK9DaBejm5aSNlP_Wl0RmMIE/view">
							Getting Started Guide
						</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>

{{> footer }}

<script>
	$(document).ready(function() {
		$(".js-classifiers__card--vision").click(function(evt) {
			evt.preventDefault();
			window.location.href = "/text_home";
			return false;
		});

		$(".js-classifiers__card--image").click(function(evt) {
			evt.preventDefault();
			window.location.href = "/vision_home";
			return false;
		});

		$(".js-classifiers__card--doodle").click(function(evt) {
			evt.preventDefault();
			window.location.href = "/doodle_home";
			return false;
		});
	});
</script>
